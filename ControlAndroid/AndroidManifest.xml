<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.kymjs.mobile" android:versionCode="1" android:versionName="1.0">

	<uses-sdk android:minSdkVersion="11" android:targetSdkVersion="19" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.RESTART_PACKAGES" />
	<application android:name="com.kymjs.mobile.AppContext"
		android:allowBackup="true" android:icon="@drawable/icon"
		android:label="@string/app_name" android:theme="@style/AppTheme">
		<activity android:name="com.kymjs.mobile.ui.activity.Splash"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="com.kymjs.mobile.ui.activity.Main" />
		<activity android:name="com.kymjs.mobile.ui.activity.ControlActivity" />
		<activity android:name="com.kymjs.mobile.ui.activity.GamePadModeTraditional"
			android:screenOrientation="landscape" />
		<activity android:name="com.kymjs.mobile.ui.activity.CarMode"
			android:screenOrientation="landscape" />
		<activity android:name="com.kymjs.mobile.ui.activity.TouchPadMode" />
		<activity android:name="com.kymjs.mobile.ui.activity.GamePadMode"
			android:screenOrientation="landscape" />
	</application>

</manifest>
